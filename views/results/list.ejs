<%- include('../_layout/header'); -%>

<h3 class="text-center">Student Results</h3>

<h5 class="text-center">
  Displaying <%= numResults %> results
  <br />
  <a href="/results/add" class="btn btn-outline-primary mt-3">Add Result</a>  
</h5>

<br />

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Roll No.</th>
      <th scope="col">Name</th>
      <th scope="col">Date of Birth</th>
      <th scope="col">Score</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% results.forEach(function(result) { %>
      <tr>
        <td scope="row"><%= result.rollno %></td>
        <td><%= result.name %></td>
        <td>
          <%= ('0' + result.dob.getDate()).slice(-2) %>-<%= ('0' + result.dob.getMonth()).slice(-2) %>-<%= result.dob.getFullYear() %>
        </td>
        <td><%= result.score %></td>
        <td>
          <a href="/results/edit/<%= result.rollno %>" class="btn btn-outline-info">
            <i class="bi bi-pencil"></i>
          </a>
          <a class="btn btn-outline-danger">
            <i class="bi bi-trash"></i>
          </a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../_layout/footer'); -%>